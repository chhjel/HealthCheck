{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es5", "es6", "es2017", "es2016.array.include", "dom"],
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "generated/*": ["src/generated/*"],
            "components/*": ["src/components/*"],
            "models/*": ["src/models/*"],
            "services/*": ["src/services/*"],
            "util/*": ["src/util/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}